<%= form_with(model: listing, local: true) do |form| %>
  <% if listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
        <% listing.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :price, class: "form-label" %>
    <%= form.number_field :price, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :category_id, class: "form-label" %>
    <%= form.select :category_id, categories.map {|cat| [cat.name, cat.id]}, class: "form-select" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

<h6 class='mb-3'>Condition</h6>
 <div class="form-check form-check-line mb-3">
  <%conditions.each do |option|%>
    <%= form.label :condition, option.capitalize, class: "form-label" %>
    <%= form.radio_button :condition, option, class: "mr-2" %>
    <%end%>
  </div>

  <div class="form-check mb-3">
    <%= form.label :insurance, class: "form-label" %>
    <%= form.check_box :insurance %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :images, class: "form-label" %>
    <%= form.number_field :images, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :available, class: "form-label" %>
    <%= form.check_box :available %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
