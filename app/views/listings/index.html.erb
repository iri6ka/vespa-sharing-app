<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Category</th>
      <th>Engine</th>
      <th>Description</th>
      <th>Condition</th>
      <th>Images</th>
      <th>Odometer</th>
      <th>Color</th>
      <th>Transmission</th>
      <th>Starter</th>
      <th>Insurance</th>
      <th>Available</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.name %></td>
        <td><%= listing.price %></td>
        <td><%= listing.category_id %></td>
        <td><%= listing.engine_id %></td>
        <td><%= listing.description %></td>
        <td><%= listing.condition %></td>
        <td><%= listing.images %></td>
        <td><%= listing.odometer %></td>
        <td><%= listing.color %></td>
        <td><%= listing.transmission %></td>
        <td><%= listing.starter %></td>
        <td><%= listing.insurance %></td>
        <td><%= listing.available %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) if current_user.id == listing.user_id %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } if current_user.id == listing.user_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

